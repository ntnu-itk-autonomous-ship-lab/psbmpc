<launch>
  <include file="$(find asv_simulator)/launch/default.launch">
    <arg name="waypoint_file" value="$(find asv_simulator)/config/autonaut_waypoints/west_to_east.yaml"/>
    <arg name="initial_state" value="[0.0, 0.0, 0.0, 1.2, 0.,0.]" />
    <arg name="u_d" value="1.2" />
  </include>

  <!-- Obstacle ship -->
  <include file="$(find asv_simulator)/launch/default.launch">
    <arg name="waypoint_file" value="$(find asv_simulator)/config/autonaut_waypoints/east_to_west.yaml" />
    <arg name="use_vo" value="False" />
    <arg name="use_sb_mpc" value="False" />
    <arg name="use_drvo" value="False" />
    <arg name="vessel_model_file" value="$(find asv_simulator)/config/models/ship1.urdf" />
    <arg name="namespace" value="obstacles/ship1" />
    <arg name="shipname" value="ship1" />
    <arg name="initial_state" value="[550.0, 0.0, 179.0, 1.5,0.,0.]" />
    <arg name="u_d" value="1.5" />
  </include>

  <include file="$(find asv_obstacle_tracker)/launch/default.launch"/>

  <node pkg="rviz"
        type="rviz"
        name="rviz"
        args="-d $(find asv_simulator)/config/rviz/two_vessels.rviz" />

  <node pkg="rosbag"
        type="record"
        name="rosbag_record"
        args="-O /media/psf/Home/svn/PhD/Autonaut/single_head_on.bag /asv/state /asv/offset /obstacles/ship1/state"
        />
</launch>
