<launch>
  <include file="$(find asv_simulator)/launch/default.launch">
    <arg name="waypoint_file" value="$(find asv_simulator)/config/mpc_waypoints/south_to_north.yaml" />
    <arg name="u_d" value="3.0" />
  </include>

  <!-- Obstacle ship -->
  <include file="$(find asv_simulator)/launch/default.launch">
    <arg name="waypoint_file" value="$(find asv_simulator)/config/mpc_waypoints/west_to_east.yaml" />
    <arg name="use_vo" value="False" />
    <arg name="use_sb_mpc" value="False" />
    <arg name="use_drvo" value="False" />
    <arg name="vessel_model_file" value="$(find asv_simulator)/config/models/ship1.urdf" />
    <arg name="namespace" value="obstacles/ship1" />
    <arg name="shipname" value="ship1" />
    <arg name="initial_state" value="[-180.0, 180.0, 0.0, 1.,0.,0.]" />
    <arg name="u_d" value="3.0" />
  </include>

  <include file="$(find asv_obstacle_tracker)/launch/default.launch"/>

  <node pkg="rviz"
        type="rviz"
        name="rviz"
        args="-d $(find asv_simulator)/config/rviz/two_vessels.rviz" />

  <node pkg="rosbag"
        type="record"
        name="rosbag_record"
        args="-O /home/giorgio/colav/mpc/sb_mpc/catkin_ws/ros_records/bagfiles/single_crossing_from_P.bag /asv/state /asv/offset /obstacles/ship1/state"
        />
</launch>
